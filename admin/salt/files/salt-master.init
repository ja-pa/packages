#!/bin/sh /etc/rc.common

START=70
USE_PROCD=1

CONFIG_DIR="/etc/salt"

start_service() {
	procd_open_instance
	procd_set_param command /usr/bin/salt-master -d -c "$CONFIG_DIR"
	procd_set_param stdout 1
	procd_set_param stderr 1
	procd_set_param pidfile 
	#procd_set_param respawn
	procd_close_instance
}
